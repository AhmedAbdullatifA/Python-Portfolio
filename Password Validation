num = "0123456789"
special_chars = "+-/*%"

while True:
    upper_count = 0
    lower_count = 0
    digit_count = 0
    special_count = 0

    password = input("Please, enter your password: ")

    for char in password:
        if char.isupper():
            upper_count += 1
        elif char.islower():
            lower_count += 1
        elif char in num:
            digit_count += 1
        elif char in special_chars:
            special_count += 1

    if len(password) >= 8 and upper_count > 0 and lower_count > 0 and digit_count > 0 and special_count > 0:
        print(f"Your password '{password}' is correct and strong.")
        break
    else:
        print(" Your password is not strong enough, please try again.")
